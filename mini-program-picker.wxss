.picker-modal{
    height: 100vh;
    width: 100vw;
    background:rgba(0,0,0,0.56);
    position: fixed;
    top: 0;
    left: 0;
    z-index: 5001;
}
.picker-modal-box{
    width:100%;
    background:rgba(255,255,255,0.96);
    position: fixed;
    bottom: 0;
    left: 0;


}
.picker-view-input-box{
    padding:4px 30rpx;

}
.picker-view-input{
    width: 90%;
    margin:0 auto;
    height: 40rpx;
    line-height: 40rpx;
    border:1px solid #ccc;
    border-radius: 5rpx;
    padding:5rpx 0;
    padding-left: 30rpx;

}
.picker-view-box{
    height: 300px;
}


.picker-view-text{
    text-align: center;
    line-height: 50px;
}
.picker-modal-form{
    display: flex;
    justify-content: space-between;
    line-height: 40px;
    padding:0 30px ;
}
.picker-modal-form>.ok{
    color:#F7BB58;

}